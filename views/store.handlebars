<div class="container-fluid">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <img class="" id="nav-logo" src="/images/Goalsy-logo1.png" alt="Goalsy logo">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="/profile">Profile</a>
                        <a class="nav-link" href="/shop">Shop</a>
                        <a class="nav-link" id="logout" href="/">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
</div>

<div class="row border-top border-bottom">
    <div class="col d-flex justify-content-center align-items-center text-align-center">
        <p class="mb-0 me-3">{{username}}</p>
        <img src="/images/Goalsy_coin_transparent.png" class="coin-img"></img>
        <p class="mb-0">{{characterGold}}</p>
    </div>
</div>

<div class="container4">
    <div class="row justify-content-between">
        {{#each items as |item|}}
        <div class="col-md-3 col-lg-2 mb-3 shop-item">
            <div class="card">
                <img src="/images/{{item.items.[0].id}}.png" class="card-img-top" alt="{{item.items.[0].name}}">
                <div class="card-body">
                    <h5 class="card-title">{{item.items.[0].name}}</h5>
                    <p class="card-text">Price: <img src="/images/Goalsy_coin_transparent.png"
                            class="coin-img"> {{item.price}}</p>
                    <p class="card-text">Category: {{item.items.[0].item_category.name}}</p>
                    <p class="card-text {{item.items.[0].rarity.name}}">Rarity: {{item.items.[0].rarity.name}}</p>
                    <button type="button" class="btn btn-primary" onclick="purchase({{item.id}})">Purchase</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>